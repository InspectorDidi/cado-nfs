# General parameters
###########################################################################

name = c180
#tasks.threads = 2

###########################################################################
# Polynomial selection
###########################################################################

tasks.polyselect.degree = 5

tasks.polyselect.P = 5000000
tasks.polyselect.admax = 2e7
tasks.polyselect.adrange = 2e5
tasks.polyselect.incr = 60
tasks.polyselect.nq = 1000
tasks.polyselect.nrkeep = 1000

###########################################################################
# Sieve
###########################################################################

rlim = 160000000
alim = 80000000
lpbr = 32
lpba = 32
tasks.sieve.mfbr = 78
tasks.sieve.mfba = 96
tasks.sieve.rlambda = 2.5
tasks.sieve.alambda = 3.0
tasks.sieve.ncurves0 = 13
tasks.sieve.ncurves1 = 8

tasks.I = 14
tasks.sieve.qrange = 10000

###########################################################################
# Filtering
###########################################################################

